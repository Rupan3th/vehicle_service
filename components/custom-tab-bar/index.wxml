<!--miniprogram/custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <!-- <view class="tab-bar-border"></view> -->
  <view class="tab-bar-item" data-index="{{0}}" bindtap="switchTab">
    <view class="tab-icon-container">
      <image src="{{activeIndex === 0 ? list[0].selectedIconPath : list[0].iconPath}}" mode="heightFix"></image>
    </view>
    <view style="color: {{activeIndex === 0 ? selectedColor : color}}">{{list[0].text}}</view>
  </view>
  <view class="tab-bar-item">
    <view class="middle-tab-image-container" data-index="{{1}}" bindtap="gotoReq">
      <image src="../../image/icon_generate.png" style="width: 81px;" mode="widthFix"></image>
      <view style="color: {{color}}; font-size: 10px; color: #4DB628; margin-top: -4px;">发布推修单</view>
    </view>
  </view>
  <view class="tab-bar-item" data-index="{{2}}" bindtap="switchTab">
    <view class="tab-icon-container">
      <image src="{{activeIndex === 2 ? list[2].selectedIconPath : list[2].iconPath}}" style="width: 16px;"></image>
    </view>
    <view style="color: {{activeIndex === 2 ? selectedColor : color}}">{{list[2].text}}</view>
  </view>
</view>
