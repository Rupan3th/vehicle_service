<!--pages/orderList/orderList.wxml-->
<view class="t">
  <mp-tabs tabs="{{tabs}}" contentlist="{{contentlist}}" activeTab="{{activeTab}}" swiperClass="weui-tabs-swiper" activeClass="tab-bar-title__selected"
    bindtabclick="onTabCLick" bindchange="onChange" >
    <block wx:for="{{tabs}}" wx:key="title">
      <!-- 该内容插入到tabs的slot中 -->
      <view class="tab-content" slot="tab-content-{{index}}">

        <view class="no-result" style="display: {{noResultDisplayState}};">
          <image style="width:105px; height:105px;" src="{{noresultImgSrc}}"></image>
          <text style="color: #999999; margin-top: 16px; ">暂无订单</text>
        </view>

        <scroll-view scroll-y="true" style="height:{{ windowHeight}}px;width:100%; " bindscrolltolower="loadMore">
          <block wx:for="{{contentList}}" wx:key="index">
            <view class="tab-content-item" bindtap="gotoDetail" data-id="{{item.id}}">
              <view class="state-box">
                <view class="order-time"><text>{{item.time}}</text></view>
                <view class="state-text"><text style="color: {{stateTextColor[item.status]}} ">{{orderState[item.status]}}</text></view>              
              </view>
              <view class="line"></view>
              <view class="orderInfo-box">
                <view class="brand-line">
                  <image style="width:26px; height:26px;" src="{{item.brandUrl}}"></image>
                  <text style="margin-left:10px; font-size:16px; font-weight:bold; color:#3A3A3A;">{{item.brand}}</text>
                </view>
                <view class="plate-number"><text>{{item.plate}}</text></view>
                <view class="garagename"><text style="color:#4C4C4C;">{{item.garage}}</text></view>
                <view class="order-detail">
                  <view class="coin-line" style="display: {{detaildisplayState[item.status]}};">
                    <text>定损金额：</text> <text>¥</text> <text>{{fixedLossAmount}}</text>
                  </view>
                  <view class="coin-line" style="display: {{detaildisplayState[item.status]}};">
                    <text>自保类型：</text> <text>{{insuranceType[item.insuranceType-1]}}</text>
                  </view>
                  <view class="coin-line" style="display: {{detaildisplayState[item.status]}};">
                    <text>定损比例：</text> <text>{{fixedLossRatio}}</text> <text>%</text>
                  </view>
                  <view class="coin-line" style="display: {{detaildisplayState[item.status]}};">
                    <text style="margin-left:12px;">应收款：</text> <text>¥</text> <text>{{receivables}}</text>
                  </view>
                  <view class="order-number-line">
                    <text style="margin-left:12px;"> 订单号：</text> <text>{{item.id}}</text>
                  </view>
                  <view class="coin-line" style="display: {{detaildisplayState[item.status]}};">
                    <image style="width:105px; height:105px; margin-right: 20rpx;" src="{{item.damagePicUrls[0]}}"></image>
                    <image style="width:105px; height:105px;" src="{{item.damagePicUrls[1]}}"></image>
                  </view>
                </view>

              </view>
              
            </view>
          </block>
        </scroll-view>
      </view>
    <!-- 该内容插入到tabs的slot中 -->
    </block>
  </mp-tabs>
</view>
